<% unless current_micropost == micropost %>
  <% if @user.gooding?(micropost) %>
    <%= form_with(model: @user.favorites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'いいね', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: @user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'いいね', class: 'btn btn-outline-danger btn-sm' %>
    <% end %>
  <% end %> 
<% end %>